# Update system
sudo pacman -Syu

# Audio packages
sudo pacman -S lib32-libpulse libpulse pipewire-pulse pipewire-alsa

# Sway related packages
sudo pacman -S sway swaybg waybar acpi brightnessctl rofi 

# Bluetooth
sudo pacman -S bluez bluez-libs bluez-utils

# Gaming related packages
sudo pacman -S gamemode lib32-gamemode mangohud gamescope

# Intel Driver
sudo pacman -S mesa lib32-mesa mesa-utils vulkan-intel lib32-vulkan-intel vulkan-icd-loader lib32-vulkan-icd-loader intel-media-driver 

# Optional Packages
sudo pacman -S kitty pavu p7zip zsh thunar
